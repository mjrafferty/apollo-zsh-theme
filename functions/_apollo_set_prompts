# vim:ft=zsh

_apollo_set_prompts(){

  _apollo_set_left_prompt

  _apollo_make_rprompt "${#_APOLLO_PROMPT_LINES}"

  if [[ "$APOLLO_LINE_LINKS" == "true" ]]; then
    RPROMPT="${_APOLLO_RETURN_MESSAGE}\${_APOLLO_RIGHT_LINK[${#_APOLLO_PROMPT_LINES}]}"
  else
    RPROMPT="${_APOLLO_RETURN_MESSAGE}"
  fi

  _APOLLO_RPROMPT_COPY="$RPROMPT"

  unset _APOLLO_CURRENT_RPROMPT;

}

_apollo_set_prompts "$@"
