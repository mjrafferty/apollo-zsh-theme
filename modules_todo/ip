# vim:ft=zsh
################################################################
# Segment to display the current IP address

typeset -g APOLLO_IP_FG="white"
typeset -g APOLLO_IP_BG="cyan"
typeset -g APOLLO_IP_INTERFACE="en0"

__apollo_ip_run() {

  __apollo_parse_ip $APOLLO_IP_INTERFACE || return

  __APOLLO_RETURN_MESSAGE="${__APOLLO_RETURN_MESSAGE//\%/%%}"

}
