# vim:ft=zsh
################################################################
# Segment to display NodeEnv
prompt_nodeenv() {
  if [[ -n "$NODE_VIRTUAL_ENV" ]]; then
    __apollo_cached_cmd_stdout node --version || return
    local info="${__APOLLO_RETVAL}[${NODE_VIRTUAL_ENV:t}]"
    "$1_prompt_module" "$0" "$2" "black" "green" 'NODE_ICON' 0 '' "${info//\%/%%}"
  fi
}
