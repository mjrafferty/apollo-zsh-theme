# vim:ft=bash
################################################################
# Host: machine (where am I)
prompt_host() {
  if [[ -n "$SSH_CLIENT" || -n "$SSH_TTY" ]]; then
    "$1_prompt_module" "$0_REMOTE" "$2" "${DEFAULT_COLOR}" yellow SSH_ICON 0 '' "${APOLLO_HOST_TEMPLATE}"
  else
    "$1_prompt_module" "$0_LOCAL" "$2" "${DEFAULT_COLOR}" yellow HOST_ICON 0 '' "${APOLLO_HOST_TEMPLATE}"
  fi
}
